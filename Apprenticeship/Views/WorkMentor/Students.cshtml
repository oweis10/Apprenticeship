@model dynamic
@{
    ViewData["Title"] = "Students";
}
<h1>@ViewData["Title"]</h1>
<div class="bd-example table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th class="text-left" scope="col">Student name</th>
                <th class="text-left" scope="col">Portfolio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model.students)
            {
                <tr>
                    <td class="text-left" scope="col">@s.FirstName @s.LastName</td>
                    <td class="text-left" scope="col"><a target="_blank" asp-controller="Student" asp-action="GetStudentPortfolio" asp-route-studentId="@s.Id" >@s.portFolioFile.Name</a></td>
                    <td class="text-right" scope="col">
                        @Html.ActionLink("Tasks", "StudentTasks", "Tasks", new { studentId = @s.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Profile", "Student", "WorkMentor", new { studentId = @s.Id }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




