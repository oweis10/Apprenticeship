@model Apprenticeship.Models.Intermediate.IntermediateStudent
@{
    ViewData["Title"] = "Create Student";
}
<h1>@ViewData["Title"]</h1>


@using (@Html.BeginForm("CreateStudent", "user", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-group">
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.FirstName, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.FirstName, new { placeholder = "Enter first name", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.SecondName, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.SecondName, new { placeholder = "Enter second name", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.SecondName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.LastName, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.LastName, new { placeholder = "Enter last name", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.StudentId, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.StudentId, new { placeholder = "Enter id", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.StudentId, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Email, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Email, new { placeholder = "Enter Email", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Password, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.PasswordFor(x => x.Password, new { placeholder = "Enter Password", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.ConfirmPassword, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.PasswordFor(x => x.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.ConfirmPassword, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Address, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.Address, new { placeholder = "Enter Address", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.CompanyName, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.CompanyName, new { placeholder = "Enter Company Name", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.CompanyName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.DegreeId, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            <select class="form-control" name="DegreeId">
                <option disabled selected>Select Degree</option>
                @foreach (var degree in ViewBag.degrees)
                {
                    <option value="@degree.Value">@degree.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.DegreeId, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.MajorId, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            <select class="form-control" name="MajorId">
                <option disabled selected>Select Major</option>
                @foreach (var major in ViewBag.majors)
                {
                    <option value="@major.Value">@major.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.MajorId, null, new { @class = "text-danger" })
        </div>
    </div>


    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.PhoneNumber, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.PhoneNumber, new { placeholder = "Enter Phone Number", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.PhoneNumber, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.EmergencyContactFullName, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.EmergencyContactFullName, new { placeholder = "Enter emergency contact name", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.EmergencyContactFullName, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.EmergencyContactPhoneNumber, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(x => x.EmergencyContactPhoneNumber, new { placeholder = "Enter emergency contact phone number", @class = "form-control" })
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.EmergencyContactPhoneNumber, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(x => x.StudentsCoursesIds, new { @class = "form-control font-weight-bolder" })
        </div>
        <div class="col-md-5">
            <select class="selectpicker form-control" multiple data-live-search="true" name="StudentsCoursesIds">
                <option disabled selected>Select Courses</option>
                @foreach (var course in ViewBag.Courses)
                {
                    <option value="@course.Value">@course.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            @Html.ValidationMessageFor(x => x.StudentsCoursesIds, null, new { @class = "text-danger" })
        </div>
    </div>
</div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    })
</script>
