@model Apprenticeship.Models.Intermediate.IntermediateStudent
@{
    ViewData["Title"] = "Edit Student";
}
<h1>@ViewData["Title"]</h1>


@using (@Html.BeginForm("EditStudent", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-group">
    @Html.HiddenFor(x => x.Id)
    @Html.TextBoxFor(x => x.FirstName, new { placeholder = "Enter first name", @class = "form-control" })
    @Html.TextBoxFor(x => x.SecondName, new { placeholder = "Enter second name", @class = "form-control" })
    @Html.TextBoxFor(x => x.LastName, new { placeholder = "Enter last name", @class = "form-control" })
    
    @Html.TextBoxFor(x => x.Address, new { placeholder = "Enter address", @class = "form-control" })
    <select class="form-control" name="DegreeId">
        @foreach (var degree in ViewBag.degrees)
        {
            if (@degree.Selected == true)
            {
                <option selected="selected" value="@degree.Value">@degree.Text</option>
            }
            else
            {
                <option value="@degree.Value">@degree.Text</option>
            }
        }
    </select>
    <select class="form-control" name="MajorId">
        @foreach (var major in ViewBag.majors)
        {
            if (@major.Selected == true)
            {
                <option selected="selected" value="@major.Value">@major.Text</option>
            }
            else
            {
                <option value="@major.Value">@major.Text</option>
            }
        }
    </select>
    @Html.TextBoxFor(x => x.PhoneNumber, new { placeholder = "Enter phone number", @class = "form-control" })
    @Html.TextBoxFor(x => x.EmergencyContactFullName, new { placeholder = "Enter emergency contact name", @class = "form-control" })
    @Html.TextBoxFor(x => x.EmergencyContactPhoneNumber, new { placeholder = "Enter emergency contact phone number", @class = "form-control" })

    <select class="selectpicker form-control" multiple data-live-search="true" name="StudentsCoursesIds">
        @foreach (var course in ViewBag.courses)
        {
            if (@course.Selected == true)
            {
                <option selected="selected" value="@course.Value">@course.Text</option>
            }
            else
            {
                <option value="@course.Value">@course.Text</option>
            }
        }
    </select>

</div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    })
</script>
